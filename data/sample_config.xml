<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- Configuration options for RSC 2.0 -->
<options>
	<!-- Stdout output options -->
	<info-output>false</info-output>
	<debug-output>true</debug-output>

	<!-- Use binary format for file handling (to save disk space) -->
	<use-binary-files>false</use-binary-files>

	<!-- Use a fixed random seed -->
	<random-seed>421337</random-seed>

	<!-- Dataset and directory handling -->
	<dataset>isolet</dataset>
	<input-directory>/tardis/datasets/isolet/input</input-directory>
	<temp-directory>/tardis/temp/isolet-temp</temp-directory>
	<cluster-directory>/tardis/temp/isolet-clusters/</cluster-directory>

	<!-- Clustering options -->
	<maximum-cluster-size>100</maximum-cluster-size>
	<maximum-number-of-clusters>1000</maximum-number-of-clusters>

	<!-- Clustering result options -->
	<cluster-style>soft+rsc</cluster-style>

	<!-- Index structure options -->
	<index-structure>
		<type>sash</type>
		<settings>
			<sash-degree>4</sash-degree>
		</settings>
	</index-structure>
</options>
